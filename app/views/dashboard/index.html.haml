- panel 'currently_working_on' do
  %h2 Currently Working On
  - if @current_tb.blank?
    Nothing at the moment...
  - else
    = render :partial => 'current_tb', :object => @current_tb

- panel 'active_tasks' do
  %h2 Active Tasks
  - Task.active.group_by(&:project).sort_by { |a| a.first.name }.each do |project, tasks|
    %h3=project.name
    %ul
      - tasks.each do |task|
        %li= task.name


<h1>Listing clients</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Active</th>
  </tr>

<% @clients.each do |client| %>
  <tr>
    <td><%= link_to client.name, edit_client_path(client) %></td>
    <td><%= yesno client.active %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New client', new_client_path %>
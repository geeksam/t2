!!! Strict
%html
  %head
    %title= h(yield(:title) || 'Timr 2')
    = stylesheet_link_tag 'application'
    = javascript_include_tag :defaults
    = yield(:head)
  %body
    #container
      #header
        #app_title= link_to 'Timr 2', '/'
        #user_nav
          #current_user_info
            - if current_user
              You are logged in as: #{logged_in_as}
              |
              = link_to 'Log Out', logout_path
            - else
              = link_to 'Log In', login_path
          #nav_links
            - if current_user
              - links = []
              - links << link_to('Clients',     clients_path    )
              - links << link_to('Projects',    projects_path   )
              - links << link_to('Tasks',       tasks_path      )
              - links << link_to('Time Blocks', time_blocks_path)
              = links.join(' | ')
        .clear
      
      - flash.each do |name, msg|
        %div{:id => "flash_#{name}"}=msg
      
      #page_content
        #sidebar= yield :sidebar
        #main_content= yield
        .clear

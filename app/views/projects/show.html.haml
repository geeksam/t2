%h1 Showing project

= show_field 'Client',      link_to(@project.client_name, @project.client)
= show_field 'Name',        @project.name
= show_field 'Short Name',  @project.short_name
= show_field 'Active',      yesno(@project.active)

%br
= separated_group do |g|
  - g << link_to('All Projects', projects_path)
  - g << link_to('Edit', edit_project_path(@project))
  - g << link_to('Related Tasks', project_tasks_path(@project))
  - g << link_to('New Task', new_project_task_path(@project))

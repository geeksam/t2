<h1>Listing projects</h1>

<table>
  <tr>
    <th>Client</th>
    <th>Name</th>
    <th>Active</th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= link_to project.client_name, project.client if project.client %></td>
    <td><%= link_to project.name, edit_project_path(project) %></td>
    <td><%= yesno project.active %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New project', new_project_path %>
%h1 Listing tasks

%table
  %tr
    %th Project
    %th Name
    %th Ticket #
    %th Active
    %th Recurring
    %th Notes

  - @tasks.each do |task|
    %tr
      %td= link_to task.project_name, task.project
      %td= link_to task.name, task
      %td= dash_if_blank task.ticket_no
      %td= yesno task.active
      %td= yesno task.recurring
      %td= dash_if_blank task.notes

%br
= link_to 'New task', new_task_path

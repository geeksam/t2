<h1>Listing tasks</h1>

<table>
  <tr>
    <th>Project</th>
    <th>Name</th>
    <th>Ticket #</th>
    <th>Active</th>
    <th>Recurring</th>
    <th>Notes</th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <td><%= link_to task.project_name, task.project %></td>
    <td><%= link_to task.name, task %></td>
    <td><%= dash_if_blank task.ticket_no %></td>
    <td><%= yesno task.active %></td>
    <td><%= yesno task.recurring %></td>
    <td><%= dash_if_blank task.notes %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New task', new_task_path %>